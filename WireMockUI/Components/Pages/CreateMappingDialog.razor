@using WireMock.Admin.Mappings
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudTextField @bind-Value="_title"
                          Label="Title"
                          Required="true"
                          RequiredError="Title is required"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense" />

            <MudNumericField @bind-Value="_priority"
                             Label="Priority"
                             Variant="Variant.Outlined"
                             Margin="Margin.Dense"
                             HelperText="Higher priority mappings are matched first" />

            <MudDivider Class="my-4" />

            <MudText Typo="Typo.h6" Class="mb-2">Request Pattern</MudText>

            <MudTextField @bind-Value="_path"
                          Label="Path"
                          Placeholder="/api/users"
                          Required="true"
                          RequiredError="Path is required"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense" />

            <MudSelect @bind-Value="_selectedMethod"
                       Label="HTTP Method"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense">
                <MudSelectItem Value="@("GET")">GET</MudSelectItem>
                <MudSelectItem Value="@("POST")">POST</MudSelectItem>
                <MudSelectItem Value="@("PUT")">PUT</MudSelectItem>
                <MudSelectItem Value="@("DELETE")">DELETE</MudSelectItem>
                <MudSelectItem Value="@("PATCH")">PATCH</MudSelectItem>
            </MudSelect>

            <MudDivider Class="my-4" />

            <MudText Typo="Typo.h6" Class="mb-2">Response</MudText>

            <MudNumericField @bind-Value="_statusCode"
                             Label="Status Code"
                             Variant="Variant.Outlined"
                             Margin="Margin.Dense"
                             Min="100"
                             Max="599" />

            <MudTextField @bind-Value="_responseBody"
                          Label="Response Body"
                          Lines="5"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Placeholder='{"message": "Success"}' />

            <MudTextField @bind-Value="_responseContentType"
                          Label="Content-Type"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Placeholder="application/json" />

            <MudNumericField @bind-Value="_delay"
                             Label="Delay (ms)"
                             Variant="Variant.Outlined"
                             Margin="Margin.Dense"
                             HelperText="Response delay in milliseconds" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public EventCallback OnMappingCreated { get; set; }

    private MudForm? _form;
    private string _title = "";
    private int _priority = 0;
    private string _path = "";
    private string _selectedMethod = "GET";
    private int _statusCode = 200;
    private string _responseBody = "";
    private string _responseContentType = "application/json";
    private int _delay = 0;

    private async Task Submit()
    {
        if (_form != null)
        {
            await _form.Validate();

            if (!_form.IsValid)
            {
                return;
            }
        }

        var mapping = new MappingModel
        {
            Guid = System.Guid.NewGuid(),
            Title = _title,
            Priority = _priority,
            Request = new RequestModel
            {
                Path = _path,
                Methods = new[] { _selectedMethod }
            },
            Response = new ResponseModel
            {
                StatusCode = _statusCode,
                Body = _responseBody,
                Headers = string.IsNullOrWhiteSpace(_responseContentType)
                    ? null
                    : new Dictionary<string, object> { { "Content-Type", _responseContentType } },
                Delay = _delay > 0 ? _delay : null
            }
        };

        MudDialog?.Close(DialogResult.Ok(mapping));
    }

    private void Cancel()
    {
        MudDialog?.Cancel();
    }
}
